<Window x:Class="RadControlsDiagram.DecisionSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Text" Grid.Row="0" HorizontalAlignment="Right"/>
        <TextBox Name="txtText" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0"/>
        <Button Name="btnOk" Grid.Row="1" Grid.ColumnSpan="2" Content="OK" Click="btnOk_Click_1"/>
        <Button Name="btnCancel" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Content="Cancel" Click="btnCancel_Click_1" IsCancel="True"/>
    </Grid>
</Window>
